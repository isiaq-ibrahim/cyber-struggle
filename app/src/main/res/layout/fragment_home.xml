<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cyberStruggleDarkLogoImageView"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:src="@drawable/cyberstruggle_logo_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/interDisciplinaryCardView"
            android:layout_width="match_parent"
            android:layout_height="280dp"

            android:layout_below="@id/cyberStruggleDarkLogoImageView"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="#ffffffff"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/soldierImageView"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nobg_cyberstruggle_interdisciplinary_soldier_image"
                    />

                <TextView
                    android:id="@+id/interDisciplinaryTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/soldierImageView"
                    android:layout_toRightOf="@id/soldierImageView"
                    android:fontFamily="@font/poppins_black"
                    android:layout_marginEnd="10dp"
                    android:text="INTERDISCIPLINARY CYBERSECURITY EXPERTISE"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/interDisciplinaryDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reskilling security operation centers front-liners to remain functional resilient and primed; technically and psychologically no matter the conditions"
                    android:layout_toRightOf="@id/soldierImageView"
                    android:layout_below="@id/interDisciplinaryTitleTextView"
                    android:fontFamily="@font/poppins_medium"
                    android:justificationMode="inter_word"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="12sp"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/interdisciplinary"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/interDisciplinaryCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_gps_not_fixed_24"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/interDisciplinaryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interdisciplinary"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Blending offensive and defensive technical skills with social science"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/functional"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/interdisciplinary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_mode_24"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/functionalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Functional"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Focusing on know-why, critical thinking, problem solving and teaming"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/primed"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/functional">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_pix_24"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/primedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primed"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Mental toughness, emotional regulation, adaptation and resilience"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/unconventionalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNCONVENTIONAL PROCESSES REQUIRE UNCONVENTIONAL PEOPLE"
            android:layout_below="@+id/primed"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_black"
            android:textSize="12sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/specialForceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We bring the special forces mindset and doctrine to the cyber world!"
            android:layout_below="@id/unconventionalTextView"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/descriptionOneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_one"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_below="@id/specialForceTextView"
            />

        <TextView
            android:id="@+id/descriptionTwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_two"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_below="@id/descriptionOneTextView"
            />

        <TextView
            android:id="@+id/descriptionThreeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_three"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_below="@id/descriptionTwoTextView"
            />

        <ImageView
            android:id="@+id/eagleImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/globaleagle"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/descriptionThreeTextView"
            />

        <TextView
            android:id="@+id/appreciatePeopleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_black"
            android:layout_below="@+id/eagleImageView"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="WE APPRECIATE MACHINES AND TECHNOLOGIES, BUT WE STILL BELIEVE IN PEOPLE!"
            />

        <TextView
            android:id="@+id/individualsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individuals who want to make a significant difference and Corporates who are keen to have special forces mindset in their teams"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:layout_marginTop="10dp"
            android:layout_below="@id/appreciatePeopleTextView"
            android:fontFamily="@font/poppins_medium"
            />

        <LinearLayout
            android:id="@+id/simulationLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/individualsTextView"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/simulation"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="S46 SIMULATION and RANGE"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:justificationMode="inter_word"
                        android:text="S46â€˜s cyber range simulator is the first of its kind to immerse a unique AI-based layer on top of the tech drills scenarios that can indicate behavioral and psychological alerts such as stress, mental-toughness, burn-out, resilience, leadership capacity, and adaptability of trainees."
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/courses"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="COURSES &amp; CERTIFICATIONS"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our acceleration programs stand out by equipping soc analysts, blue and purple team members, and cyber incident front-liners with technically hybrid skills, a holistic security perspective, and a resilient, primed mindset through interdisciplinary and functional training."
                        android:layout_marginBottom="20dp"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>